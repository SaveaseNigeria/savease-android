<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:background="@drawable/bne"
    tools:context=".Auth.Login"
    android:paddingRight="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageButton
        android:id="@+id/imgBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_navigate" />


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="#fff">

        </LinearLayout>

        <ImageView
            android:id="@+id/splashIMAGE"
            android:layout_width="150dp"
            android:layout_height="20.19dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfprodisplayheavy"
            android:text="We are helping millions of people"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"

            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"

            android:text="save their money."
            android:fontFamily="@font/sfprodisplayheavy"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sfprodisplaylight"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:text="We have solved the banking hitch of distance, time and structure. You can now make deposit into distinctive bank accounts without the need to walk into a banking hall. "
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />



            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/edtLoginUsername"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bubble3"
                android:gravity="center_vertical"
                android:hint="User ID"
                android:inputType="text"
                android:textColor="@color/colorAccent"
                android:textSize="13sp" />
        <requestFocus />







            <EditText
                android:padding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="20dp"
                android:id="@+id/edtLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bubble3"
                android:gravity="center_vertical"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"/>
        <requestFocus />



        <Button
            android:id="@+id/btnLogin"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bubble"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/sfprodisplaylight"
            android:text="Forgot Password?"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:text="New to Savease? Register Here"
            android:textAlignment="center"
            android:fontFamily="@font/sfprodisplaythin"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold" />



    </LinearLayout>
    </LinearLayout>

</ScrollView>