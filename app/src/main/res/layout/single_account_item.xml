<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="6dp"
    android:padding="10dp">


        <TextView
            android:id="@+id/txtBankNameBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/sfprodisplaylight"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAccountNumberBank"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#000"
            android:fontFamily="@font/sfprodisplaylight"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtAccountNameBank"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTransactionType"
        android:text=""
        android:textSize="17sp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sfprodisplaylight"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/img_delete_acc"
        android:layout_width="0dp"
        android:background="#fff"
        android:src="@drawable/ic_delete"
        android:layout_weight="1"
        android:layout_height="40dp" />

</LinearLayout>



    <LinearLayout
        android:background="@drawable/bubble3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </LinearLayout>

</LinearLayout>
