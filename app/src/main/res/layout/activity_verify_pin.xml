<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.VerifyPinActivity">

    <ImageButton
        android:id="@+id/imgBackVerify"
        android:layout_width="45dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_navigate"
        android:scaleType="centerCrop"
        android:layout_height="45dp" />



    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="#fff">

        </LinearLayout>

        <ImageView
            android:id="@+id/splashIMAGE"
            android:layout_width="150dp"
            android:layout_height="20.19dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfprodisplayheavy"
            android:text="Verify Pin"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"

            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sfprodisplaylight"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:text="Insert the voucher pin below and tap the verify button to check the validity of your voucher."
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />




        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edtVerifyPin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bubble3"
            android:gravity="center_vertical"
            android:hint="Enter Voucher Pin"
            android:inputType="number"
            android:textColor="@color/colorAccent"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bubble"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="11sp" />






    </LinearLayout>

</RelativeLayout>