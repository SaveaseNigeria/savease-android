<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="50dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.VoucherTeable">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_above="@+id/down"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/down"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rvOne"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/toolbarBen"
                android:background="@drawable/rectangle"
                android:padding="15dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_rounded">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtAccountBalance"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/sfprodisplaymedium"
                                android:text=""
                                android:textColor="#131D33"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                            <Button

                                android:layout_marginRight="45dp"
                                android:id="@+id/btnAccountOfficer"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bubble2"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:layout_width="wrap_content"
                                android:text="Account Officer"
                                android:textColor="#fff"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                android:padding="8dp"
                                android:textSize="11sp"
                                android:layout_height="30dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="#F2F3F8">

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textColor="#131D33"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtAccountNameNOne"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountName"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="Account Name"
                                    android:textColor="#3A5160"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="#131D33"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountNumber"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="Account Number"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="#3A5160"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:textColor="#131D33"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountType"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="UserType"
                                    android:textColor="#3A5160"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rvOne"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfprodisplayheavy"
                android:text="Voucher Table"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdesp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/sfprodisplaylight"
                android:padding="5dp"
                android:text="To make a deposit transaction, Kindly click on the dropdown tab to select the appropriate wallet type."
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinVouchers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/txt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:hint="Voucher"
                android:textColorHint="#fff"
                app:ms_arrow_tint="#fff"
                app:ms_background_color="@color/colorAccent"
                app:ms_background_selector="@color/ash"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="350dp"
                app:ms_hint_color="@color/darkop"
                app:ms_text_color="#fff" />

            <LinearLayout
                android:id="@+id/dateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/startdate"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bubble3"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="Start Date"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/enddate"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bubble3"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="End Date"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />


                <Button

                    android:id="@+id/btnGetVoucher"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bubble"
                    android:foregroundTint="@color/colorAccent"
                    android:text="Get Vouchers"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="11sp" />


            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvVoucherTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView

            android:background="@color/colorAccent"

            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaythin"
            android:text="Copyrights © 2016 All Rights Reserved. Powered by Savease Nigeria Limited, a sub-class of Savease Africa."
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>