<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bne"
    tools:context=".Auth.AuthWelcome">


    <Button
        android:id="@+id/btnVer"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="71dp"
        android:background="@drawable/_dark"
        android:fontFamily="sans-serif"
        android:text="Verify Pin"
        android:textAllCaps="false"
        android:textSize="12sp" />

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/splashIMAGE"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo" />
    <TextView
        android:id="@+id/saveEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashIMAGE"
        android:layout_marginRight="10dp"
        android:text="Save Easily, Pay Easily "
        android:textColor="#131D33"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:fontFamily="@font/sfprodisplaylight" />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="180dp"
        android:layout_marginTop="60dp"
        android:layout_height="45dp"

        android:layout_above="@id/btnRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bubble"
        android:fontFamily="sans-serif"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/btnRegister"
        android:layout_width="180dp"
        android:layout_below="@+id/saveEasy"
        android:layout_height="45dp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bubble2"
        android:fontFamily="sans-serif"
        android:text="Register"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnRegister"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:text="Version 2.5.2"
        android:textColor="#131D33"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:fontFamily="@font/electrolize" />



</RelativeLayout>