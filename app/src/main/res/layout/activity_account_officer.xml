<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="@drawable/bne"
    tools:context=".Activities.AccountOfficer">


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_above="@id/down"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rvOne"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/toolbarBen"
                android:background="@drawable/rectangle"
                android:padding="15dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_rounded">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtAccountBalance"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/sfprodisplaymedium"
                                android:text=""
                                android:textColor="#131D33"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                            <Button

                                android:layout_marginRight="45dp"
                                android:id="@+id/btnAccountOfficer"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bubble2"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:layout_width="wrap_content"
                                android:text="Account Officer"
                                android:textColor="#fff"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                android:padding="8dp"
                                android:textSize="11sp"
                                android:layout_height="30dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="#F2F3F8">

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textColor="#131D33"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtAccountNameNOne"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountName"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="Account Name"
                                    android:textColor="#3A5160"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="#131D33"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountNumber"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="Account Number"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="#3A5160"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:textColor="#131D33"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountType"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="UserType"
                                    android:textColor="#3A5160"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfprodisplayheavy"
                android:text="Account Officer "
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:layout_marginTop="30dp"
                android:id="@+id/accountOfficerName"
                android:fontFamily="@font/sfprodisplaylight"
                android:text="Name"
                android:layout_gravity="right"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:id="@+id/linPhoneNumber"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_phone_call"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/accntOfficerNumber"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text="Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/linWhatsapp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_whatsapp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:id="@+id/accntOfficerWhatsapp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text="Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/linAccountOfficerMail"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_mail"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/accntOfficerEmail"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text="Name"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop="30dp"
                android:id="@+id/saveaseUserName"
                android:fontFamily="@font/sfprodisplaylight"
                android:text="Name"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfprodisplaylight"
                android:text="Kindly drop a message in the box below and I will contact back, you could call or have a live chat with the number above."
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtMessageComplaintAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bubble7"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="Enter Message"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:minLines="2"
                android:maxLines="3"
                android:scrollbars="none"
                android:inputType="textMultiLine"
                />

            <Button
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bubble4"
                android:fontFamily="@font/sfprodisplaylight"
                android:layout_width="80dp"
                android:text="Send"
                android:id="@+id/btnSendAccountMessage"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:layout_marginBottom="10dp"
                android:textSize="11sp"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView

            android:background="@color/colorAccent"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaythin"
            android:text="Copyrights Â© 2016 All Rights Reserved. Powered by Savease Nigeria Limited, a sub-class of Savease Africa."
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>