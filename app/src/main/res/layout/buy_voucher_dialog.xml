<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/subTotalText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sub-Total:"
        android:fontFamily="@font/sfprodisplaylight"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/commissionTxt"
        android:layout_width="300dp"
        android:fontFamily="@font/sfprodisplaylight"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Commission"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/orderTotalTxt"
        android:layout_width="300dp"
        android:fontFamily="@font/sfprodisplaylight"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Order Total"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:fontFamily="@font/sfprodisplaylight"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/chkAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="I agree (Terms and Condition"
            android:checked="false" />

        <TextView
            android:id="@+id/txtTandC"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Read..."
            android:textColor="#688CDD"
            android:textSize="14sp" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDiscard"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/sfprodisplaylight"
            android:background="@drawable/bubble"
            android:foregroundTint="@color/darkop"
            android:text="Discard"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:fontFamily="@font/sfprodisplaylight"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/bubble"
            android:foregroundTint="@color/darkop"
            android:text="Place Order"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>