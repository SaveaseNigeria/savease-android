<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.FundAccount"
    tools:showIn="@layout/activity_fund_account">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/down"
        tools:context=".Activities.AddBeneficiaryActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bne"
            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/rvOne"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/toolbarBen"
                android:background="@drawable/rectangle"
                android:padding="15dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_rounded">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtAccountBalance"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/sfprodisplaymedium"
                                android:text=""
                                android:textColor="#131D33"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                            <Button

                                android:layout_marginRight="45dp"
                                android:id="@+id/btnAccountOfficer"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bubble2"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:layout_width="wrap_content"
                                android:text="Account Officer"
                                android:textColor="#fff"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                android:padding="8dp"
                                android:textSize="11sp"
                                android:layout_height="30dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="#F2F3F8">

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textColor="#131D33"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtAccountNameNOne"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountName"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="Account Name"
                                    android:textColor="#3A5160"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="#131D33"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountNumber"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="Account Number"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="#3A5160"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:textColor="#131D33"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountType"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="UserType"
                                    android:textColor="#3A5160"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfprodisplayheavy"
                android:layout_marginBottom="20dp"
                android:text="Credit Card Details"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.braintreepayments.cardform.view.SupportedCardTypesView
                    android:id="@+id/supported_card_types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="20dp" />

                <com.braintreepayments.cardform.view.CardForm
                    android:id="@+id/card_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/bt_margin"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edtAmountFunded"
                android:layout_width="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="40dp"
                android:inputType="number"
                android:layout_marginLeft="60dp"
                android:hint="Amount"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btnFundAccount"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/bubble"
                android:fontFamily="@font/sfprodisplaylight"
                android:foregroundTint="@color/darkop"
                android:text="Fund Account"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="11sp" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView

            android:background="@color/colorAccent"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaythin"
            android:text="Copyrights Â© 2016 All Rights Reserved. Powered by Savease Nigeria Limited, a sub-class of Savease Africa."
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>