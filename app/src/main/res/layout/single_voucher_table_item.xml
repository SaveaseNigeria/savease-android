<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="6dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:text="Voucher Status :"
                    android:textSize="16sp"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtVoucherStatus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:layout_height="wrap_content"
                    android:text="200 meters"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:layout_weight="1.2"
                    android:layout_height="wrap_content"
                    android:text="Voucher Amount :"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txtVoucherAmount"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:src="@drawable/more"
            android:layout_height="33dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/sfprodisplaythin"
            android:layout_height="wrap_content"
            android:text="Voucher Pin :"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtVoucherPin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textIsSelectable="true"
            android:fontFamily="@font/sfprodisplaythin"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="horizontal"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="Serial No. :"
              android:fontFamily="@font/sfprodisplaythin"
              android:textSize="16sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/txtVoucherSerialNumber"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:fontFamily="@font/sfprodisplaythin"
              android:layout_height="wrap_content"
              android:text="Date"
              android:textSize="16sp"
              android:textStyle="bold" />

      </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Batch No. :"
            android:fontFamily="@font/sfprodisplaythin"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVoucherBatch"
            android:layout_width="0dp"
            android:fontFamily="@font/sfprodisplaythin"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/sfprodisplaythin"
            android:layout_height="wrap_content"
            android:text="UsedBy :"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtUsedBy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/sfprodisplaythin"
            android:layout_height="wrap_content"
            android:text="200 meters"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/sfprodisplaythin"
            android:layout_height="wrap_content"
            android:text="UsedDate :"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtUsedDate"
            android:layout_width="0dp"
            android:fontFamily="@font/sfprodisplaythin"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/colorAccent"
    >

</LinearLayout>


</LinearLayout>
