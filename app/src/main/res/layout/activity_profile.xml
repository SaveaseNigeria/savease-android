<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@id/down"
        android:layout_marginTop="50dp"
        android:background="@drawable/bne"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rvOne"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/toolbarBen"
                android:background="@drawable/rectangle"
                android:padding="15dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_rounded">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtAccountBalance"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/sfprodisplaymedium"
                                android:text=""
                                android:textColor="#131D33"
                                android:textSize="17sp"
                                android:textStyle="bold" />
                            <Button

                                android:layout_marginRight="45dp"
                                android:id="@+id/btnAccountOfficer"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bubble2"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:layout_width="wrap_content"
                                android:text="Account Officer"
                                android:textColor="#fff"
                                android:textAllCaps="false"
                                android:textStyle="bold"
                                android:layout_marginTop="15dp"
                                android:padding="8dp"
                                android:textSize="11sp"
                                android:layout_height="30dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="#F2F3F8">

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textColor="#131D33"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtAccountNameNOne"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountName"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAlignment="center"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="Account Name"
                                    android:textColor="#3A5160"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_marginTop="5dp"
                                    android:textAlignment="center"
                                    android:textColor="#131D33"
                                    android:layout_centerHorizontal="true"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountNumber"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="Account Number"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="#3A5160"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/txtAccountType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text=""
                                    android:layout_centerHorizontal="true"
                                    android:textAlignment="center"
                                    android:textColor="#131D33"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txtAccountType"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textAlignment="center"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/sfprodisplaylight"
                                    android:text="UserType"
                                    android:textColor="#3A5160"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rvOne"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfprodisplayheavy"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linFirstName"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/txt"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplayheavy"
                    android:text="First Name"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/firstNameProfile"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvOne"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                     />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLastName"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/linFirstName"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplayheavy"
                    android:text="Last Name"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/lasttNameProfile"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvOne"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linPhoneNumberProfile"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_below="@id/linLastName"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplayheavy"
                    android:text="Phone Number"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/phoneProfile"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvOne"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linEmail"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/linPhoneNumberProfile"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplayheavy"
                    android:text="Email"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/emailProfile"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvOne"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linSaveaseid"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/linEmail"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplayheavy"
                    android:text="Savease ID"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/saveaseIdProfile"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvOne"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linBvn"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_below="@id/linSaveaseid"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplayheavy"
                    android:text="BVN"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="24dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/bvnProfile"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvOne"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplaylight"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linAcc"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_below="@id/linBvn"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplayheavy"
                    android:text="Bank Account"
                    android:textAlignment="textStart"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="100dp"

                        android:text="Click Here"
                        android:fontFamily="@font/sfprodisplaylight"
                        android:textAllCaps="false"
                        android:id="@+id/btnaddAccnt"
                        android:textColor="#fff"
                        android:background="@drawable/bubble2"
                        android:layout_height="30dp" />
                </LinearLayout>





            </LinearLayout>
        </RelativeLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView

            android:background="@color/colorAccent"

            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaythin"
            android:text="Copyrights © 2016 All Rights Reserved. Powered by Savease Nigeria Limited, a sub-class of Savease Africa."
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>