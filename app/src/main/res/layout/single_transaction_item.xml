<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/txtTransactionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:fontFamily="@font/sfprodisplaylight"
            android:textColor="#BDB8B8"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTransactionDate"
            android:text="Date"
            android:fontFamily="@font/sfprodisplaylight"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTransactionDate"
            android:layout_alignParentRight="true"
            android:text="Date"
            android:textSize="16sp"
            android:fontFamily="@font/sfprodisplaylight"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTransactionType"
            android:text="200 meters"
            android:textSize="16sp"
            android:fontFamily="@font/sfprodisplaylight"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAccountNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Jason ofua"
            android:fontFamily="@font/sfprodisplaylight"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRefNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTransactionType"
            android:layout_alignParentRight="true"
            android:text="Message"
            android:textSize="16sp"
            android:fontFamily="@font/sfprodisplaylight"
            android:textStyle="bold" />


    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/bubble3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </LinearLayout>

</LinearLayout>
