<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:padding="8dp">


    <ImageView
        android:id="@+id/imgCardAdded"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:src="@drawable/cardfive" />

    <TextView
        android:id="@+id/imgCardAmountAdded"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sfprodisplaythin"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:text="Voucher Amount"
        android:textColor="#fff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/imgCardQuantity"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="0"
        android:textSize="13sp"
        android:fontFamily="@font/sfprodisplaythin"
        android:textColor="#fff"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_width="30dp"
        android:background="#00FFFFFF"
        android:id="@+id/imgRemoveAdded"
        android:src="@drawable/ic_delete_forever"
        android:layout_height="30dp"
        android:baselineAligned="false"
        android:gravity="right" />
</LinearLayout>

