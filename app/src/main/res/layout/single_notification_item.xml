<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="6dp"
    android:padding="10dp">



        <TextView
            android:id="@+id/txtTransactionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:fontFamily="@font/sfprodisplaythin"
            android:textColor="#BDB8B8"
            android:textSize="14sp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTransactionRef"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Date"
            android:fontFamily="@font/sfprodisplaythin"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTransactionType"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            android:fontFamily="@font/sfprodisplaythin"
            android:textStyle="bold" />

    </LinearLayout>



        <TextView
            android:id="@+id/txtMessage"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTransactionType"
            android:text="200 meters"
            android:textSize="14sp"
            android:fontFamily="@font/sfprodisplaythin"
            android:textStyle="bold" />


    <LinearLayout
        android:background="@drawable/bubble3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">

    </LinearLayout>

</LinearLayout>
