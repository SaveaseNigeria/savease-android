<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/down"
        tools:context=".Activities.AddBeneficiaryActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/homebg"
            android:orientation="vertical">


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarBen"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorAccent"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView

                        android:layout_width="123dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="15dp"
                        android:src="@drawable/blue" />

                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/rvOne"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/toolbarBen"
                android:background="@drawable/rectangle"
                android:padding="20dp">


                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    card_view:cardCornerRadius="0dp">


                    <ImageView
                        android:src="@drawable/ic_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="160dp">


                        <TextView
                            android:id="@+id/acctNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Number"
                            android:textColor="#131D33"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/electrolize" />


                        <TextView
                            android:id="@+id/acctBal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/saveaseLogo"
                            android:layout_alignParentRight="true"
                            android:text="Account Balance "
                            android:textColor="#131D33"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/electrolize" />


                        <TextView
                            android:id="@+id/acctName"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtAccountNumber"
                            android:text="Account Name"
                            android:textColor="#131D33"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="10dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/electrolize" />

                        <TextView
                            android:id="@+id/txtAccountNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/acctNum"
                            android:fontFamily="@font/sfprodisplaylight"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textColor="#131D33"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtAccountBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/acctBal"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/sfprodisplaylight"
                            android:text=""
                            android:layout_marginRight="10dp"
                            android:textColor="#131D33"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtAccountName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/acctName"
                            android:fontFamily="@font/sfprodisplaylight"
                            android:text=""

                            android:layout_marginBottom="10dp"
                            android:textColor="#131D33"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <Button

                            android:layout_below="@+id/txtAccountBalance"
                            android:layout_marginRight="10dp"
                            android:id="@+id/btnAccountOfficerBen"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/bubble4"
                            android:fontFamily="@font/sfprodisplaylight"
                            android:layout_width="wrap_content"
                            android:text="Account Officer"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:padding="8dp"
                            android:textSize="11sp"
                            android:layout_height="30dp" />
                    </RelativeLayout>



                </android.support.v7.widget.CardView>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfprodisplayheavy"
                android:text="Add Beneficiary"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"

                android:fontFamily="@font/sfprodisplaylight"
                android:padding="5dp"
                android:text="You can add a beneficiary by using the wallet id/bank account number of the savease costumer."
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />


            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinBeneficiaryBankType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/txt"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bubble3"
                android:fontFamily="@font/sfprodisplayregular"
                android:hint="Account Type "
                android:textColorHint="#fff"
                android:textSize="12sp"
                app:ms_arrow_tint="#fff"
                app:ms_background_color="@color/colorAccent"
                app:ms_background_selector="@color/ash"

                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="350dp"
                app:ms_hint_color="@color/darkop"
                app:ms_text_color="#fff" />

            <LinearLayout
android:visibility="gone"
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/edtSaveaseAccountNumberben"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bubble3"
                    android:gravity="center_vertical"
                    android:hint="Enter Account Number"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp" />


                <Button

                    android:id="@+id/btnSaveBeneficiary"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bubble"
                    android:foregroundTint="@color/colorAccent"
                    android:text="Save Beneficiary"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="11sp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView

            android:background="@color/colorAccent"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sfprodisplaythin"
            android:text="Copyrights © 2016 All Rights Reserved. Powered by Savease Nigeria Limited, a sub-class of Savease Africa."
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>