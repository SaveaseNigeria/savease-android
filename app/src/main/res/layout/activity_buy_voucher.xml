<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:background="@drawable/homebg">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/down"
    android:background="@drawable/bne"
    tools:context=".Activities.BuyVoucherActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rvOne"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/toolbarBen"
            android:background="@drawable/rectangle"
            android:padding="15dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_rounded">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtAccountBalance"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/sfprodisplaymedium"
                            android:text=""
                            android:textColor="#131D33"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                        <Button

                            android:layout_marginRight="45dp"
                            android:id="@+id/btnAccountOfficer"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/bubble2"
                            android:fontFamily="@font/sfprodisplaylight"
                            android:layout_width="wrap_content"
                            android:text="Account Officer"
                            android:textColor="#fff"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp"
                            android:padding="8dp"
                            android:textSize="11sp"
                            android:layout_height="30dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="#F2F3F8">

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/txtAccountName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text=""
                                android:layout_marginTop="5dp"
                                android:textColor="#131D33"
                                android:layout_centerHorizontal="true"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtAccountNameNOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtAccountName"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:textAlignment="center"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text="Account Name"
                                android:textColor="#3A5160"
                                android:layout_centerHorizontal="true"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/txtAccountNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text=""
                                android:layout_marginTop="5dp"
                                android:textAlignment="center"
                                android:textColor="#131D33"
                                android:layout_centerHorizontal="true"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtAccountNumber"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text="Account Number"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:textColor="#3A5160"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">


                            <TextView
                                android:id="@+id/txtAccountType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text=""
                                android:layout_centerHorizontal="true"
                                android:textAlignment="center"
                                android:textColor="#131D33"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txtAccountType"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:textAlignment="center"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/sfprodisplaylight"
                                android:text="UserType"
                                android:textColor="#3A5160"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rvOne"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sfprodisplayheavy"
            android:text="Buy Voucher"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtdesp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/sfprodisplaylight"
            android:padding="5dp"
            android:text="To Buy Voucher ensure you have adequate funds in your wallet or select a payment option as prompted."
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Spinner
                android:id="@+id/spinVouchers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="5"
                android:hint="Select Voucher Type "
                android:singleLine="true"
                android:textColorHint="#fff"
                app:ms_arrow_tint="#fff"
                app:ms_background_color="@color/colorAccent"
                app:ms_dropdown_height="wrap_content"
                app:ms_dropdown_max_height="350dp"
                app:ms_hint_color="@color/darkop"
                app:ms_text_color="#fff" />

            <EditText
                android:id="@+id/edtQuantityNeeded"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/_dark"
                android:hint="Qty"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#000"

                android:textSize="20sp" />




        </LinearLayout>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinPercentage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Percentage "
            android:textColorHint="#fff"
            android:textSize="12sp"
            android:visibility="gone"
            app:ms_arrow_tint="#fff"
            app:ms_background_color="@color/colorAccent"
            app:ms_background_selector="@color/ash"
            app:ms_dropdown_height="wrap_content"
            app:ms_dropdown_max_height="350dp"
            app:ms_hint_color="@color/darkop"
            app:ms_text_color="#fff" />

        <RadioGroup
            android:id="@+id/radioCommision"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charge 0.5% commission"
                />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charge 1% commission"
                 />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charge 1.5% commission"
                 />


            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charge 2% commission"
                 />



        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprodisplaylight"
                android:text="Pin Code :"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.goodiebag.pinview.Pinview
                android:id="@+id/edtPinCodeBuyVoucher"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                app:cursorVisible="false"
                app:hint="0"
                app:inputType="number"
                app:password="true"

                app:pinBackground="@drawable/example_drawable"
                app:pinHeight="40dp"
                app:pinLength="4"
                app:pinWidth="40dp"/>


        </LinearLayout>


        <Button
            android:id="@+id/btnBuyVoucher"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bubble"
            android:fontFamily="@font/sfprodisplaylight"
            android:foregroundTint="@color/darkop"
            android:text="Buy Card"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="11sp" />


    </LinearLayout>


</ScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView

            android:background="@color/colorAccent"

            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaythin"
            android:text="Copyrights © 2016 All Rights Reserved. Powered by Savease Nigeria Limited, a sub-class of Savease Africa."
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>